<div class="main-navigation">
  <div class="container">
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
          <%= link_to "Servisne Info", root_path, :class => "navbar-brand" %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
              <%= nav_link(t("about"), about_path) %>
              <%= nav_link(t("terms"), terms_path) %>
              <%= nav_link(t("contact"), contact_path) %>
              <% if signed_in? %>
                <% if admin_page? %>
                  <%= render "layouts/admin_navigation" %>
                <% else %>
                  <%= render "layouts/user_navigation" %>
                <% end %>
              <% else %>
                <%= nav_link(t("sign_up"), new_user_registration_path) %>
                <%= nav_link(t("sign_in"), new_user_session_path) %>
              <% end %>
            </ul>
          </div>
        </nav>
      </div>
    </div>
  </div>
</div>

